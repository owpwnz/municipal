<mah:MetroWindow x:Class="Municipal_v2._0.AddWIndowFolder.AddCounter1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Municipal_v2._0.AddWIndowFolder"
        mc:Ignorable="d"
        Title="Добавление счетчика квартиры" Height="450" Width="600" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="369"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Width="299" Margin="0,0,0,0" HorizontalAlignment="Left" Content="Ручное добавление" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="RadioButton_Click"/>
            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Width="300" Margin="0,0,0,0" HorizontalAlignment="Right"  Content="Автоматическое добавление" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="RadioButton_Click_1"/>
        </Grid>

        <Grid Grid.Row="1">
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</mah:MetroWindow>
